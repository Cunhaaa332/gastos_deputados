<h1>Despesas do(a) <%= @deputado.nome %></h1>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Fornecedor</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Documento</th>
    </tr>
  </thead>
  <tbody>
    <% @deputado.despesas.each do |despesa| %>
      <tr class="<%= 'table-warning' if despesa == @maior %>">
        <td><%= despesa.txtFornecedor %></td>
        <td><%= despesa.datEmissao %></td>
        <td>R$ <%= number_with_precision(despesa.vlrLiquido, precision: 2) %></td>
        <td><a href="<%= despesa.urlDocumento %>" target="_blank">Ver nota</a></td>
      </tr>
    <% end %>
  </tbody>
</table>